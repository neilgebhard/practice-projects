{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/server-actions/[...itemId]/page.tsx",
    ".next/types/app/server-actions/[...itemId]/loading.ts",
    ".next/types/app/layout.tsx",
    ".next/types/app/server-actions/page.tsx",
    ".next/types/app/server-actions/layout.tsx"
  ],
  "exclude": ["node_modules"]
}
